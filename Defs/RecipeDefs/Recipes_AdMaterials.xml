<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <RecipeDef Name="SSR_Recipe_Base" Abstract="True">
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Cook</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
        <workSkill>Crafting</workSkill>
    </RecipeDef>


    <RecipeDef ParentName="SSR_Recipe_Base">
        <defName>SSR_Recipe_PrecisionLens</defName>
        <label>制作精密镜片</label>
        <description>制作精密镜片。</description>
        <jobString>正在制作精密镜片。</jobString>
        <workAmount>1800</workAmount>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>SSR_Glass</li>
                    </thingDefs>
                </filter>
                <count>10</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>SSR_Glass</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <SSR_PrecisionLens>1</SSR_PrecisionLens>
        </products>
        <researchPrerequisites>
            <li>SSRPrecisionOptics</li>
        </researchPrerequisites>
    </RecipeDef>

