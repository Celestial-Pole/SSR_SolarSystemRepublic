<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingCategoryDef>
		<defName>SSR_Apparel</defName>
		<label>太阳系共和国服装</label>
		<parent>Apparel</parent>
	</ThingCategoryDef>
  
	<MVCF.ModDef>
		<defName>SSR_Apparel_Def</defName>
		<label>SSR Apparel</label>
		<description>nothing here</description>
		<ActivateFeatures>
			<li>ApparelVerbs</li>
			<li>IntegratedToggle</li>
		</ActivateFeatures>
	</MVCF.ModDef>

  <ThingDef Name="SSR_ApparelCustomBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <drawerType>MapMeshOnly</drawerType>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>false</useHitPoints>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
      <Beauty>0</Beauty>
	  <SellPriceFactor>1</SellPriceFactor>
    </statBases>
	<thingCategories>
      <li>SSR_Apparel</li>
    </thingCategories>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <burnableByRecipe>true</burnableByRecipe>
    <smeltable>false</smeltable>
	<tradeability>Sellable</tradeability>
	<recipeMaker>
	  <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
	  <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
	<apparel>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Royal</li>
        <li>RoyalTier2</li>
        <li>RoyalTier3</li>
      </tags>
    </apparel>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>
  
