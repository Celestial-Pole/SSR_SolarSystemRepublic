    <uiIconPath>Things/Building/Power/WirelessPowerBroadcaster/WirelessPowerBroadcaster</uiIconPath>
		<size>(5,5)</size>
		<rotatable>false</rotatable>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
