<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <CultureDef>
        <defName>SSR_Cluture_Communism</defName>
        <label>共产主义</label>
        <description>共产主义。</description>
        <pawnNameMaker>SSR_NamerPerson</pawnNameMaker>
        <ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">SSR_Communism_Namerideo</ideoNameMaker>
        <deityNameMaker MayRequire="Ludeon.RimWorld.Ideology">SSR_NamerDeity</deityNameMaker>
        <deityTypeMaker MayRequire="Ludeon.RimWorld.Ideology">SSR_Communism_DeityType</deityTypeMaker>
        <festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">SSR_NamerFestival</festivalNameMaker>
        <leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">SSR_LeaderTitleMaker_Communism</leaderTitleMaker>
        <allowedPlaceTags>
            <li>OriginTribal</li>
        </allowedPlaceTags>
        <iconPath>UI/Cultures/SSR_Culture_Communism</iconPath>
        <styleItemTags>
            <li>
                <tag>Urban</tag>
                <baseWeight>0.01</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
            <li>
                <tag>Rural</tag>
                <baseWeight>0.01</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
            <li>
                <tag>NoBeard</tag>
                <baseWeight>10</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
            <li>
                <tag>NoTattoo</tag>
                <baseWeight>1</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
        </styleItemTags>
    </CultureDef>


    <RulePackDef>
        <defName>SSR_NamerUtility</defName>
        <rulePack>
            <rulesFiles>
                <li>SSR_Ming->Names/SSR_Ming</li>
                <li>SSR_Xing->Names/SSR_Xing</li>
                <li>SSR_FactionAdj->Names/SSR_Factionadj</li>
            </rulesFiles>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>SSR_NamerPerson</defName>
        <include>
            <li>SSR_NamerUtility</li>
        </include>
        <rulePack>
            <rulesStrings>
                <li>r_name->[SSR_Xing] [SSR_Ming][SSR_Ming]</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>SSR_LeaderTitleMaker_Communism</defName>
        <include>
            <li>SSR_NamerUtility</li>
        </include>
        <rulePack>
            <rulesStrings>
                <li>memeLeaderNoun(priority=1)->[cultureLeaderNoun]</li>
                <li>r_leaderTitle->[cultureLeaderNoun]</li>
                <li>cultureLeaderNoun->领导人</li>
                <li>cultureLeaderNoun->主管</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>SSR_Communism_Namerideo</defName>
        <include>
            <li>SSR_NamerUtility</li>
        </include>
        <rulePack>
            <rulesStrings>
                <li>r_ideoName->太阳系共和国</li>
                <li>r_ideoAdjective->太阳系共和国</li>
                <li>r_memberName->共产主义接班人</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>SSR_NamerFestival</defName>
        <rulePack>
            <rulesStrings>
                <li>festivalName->神州[festival][festival]庆典</li>
            </rulesStrings>
            <rulesFiles>
                <li>festival->Names/SSR_festivals</li>
            </rulesFiles>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>SSR_Communism_DeityType</defName>
        <include>
            <li>GlobalUtility</li>
        </include>
        <rulePack>
            <rulesStrings>
                <li>r_deityType->共产主义接班人</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>SSR_NamerDeity</defName>
        <rulePack>
            <rulesStrings>
                <li>r_deityName->[SSR_ShenMing]</li>
            </rulesStrings>
            <rulesFiles>
                <li>SSR_ShenMing->Names/SSR_ShenMing</li>
            </rulesFiles>
        </rulePack>
    </RulePackDef>

</Defs>