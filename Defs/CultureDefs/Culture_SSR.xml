<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <CultureDef>
        <defName>SSR_Cluture_Communism</defName>
        <label>共产主义</label>
        <description>共产党人不屑于隐瞒自己的观点和意图。他们公开宣布：他们的目的只有用暴力推翻全部现存的社会制度才能达到。让统治阶级在共产主义革命面前发抖吧。无产者在这个革命中失去的只是锁链。他们获得的将是整个世界。\n\n全世界无产者，联合起来！</description>
        <pawnNameMaker>SSR_Person_Namer</pawnNameMaker>
        <ideoNameMaker MayRequire="Ludeon.RimWorld.Ideology">SSR_Ideo_Namer</ideoNameMaker>
        <deityNameMaker MayRequire="Ludeon.RimWorld.Ideology">SSR_Deity_Namer</deityNameMaker>
        <deityTypeMaker MayRequire="Ludeon.RimWorld.Ideology">SSR_DeityType_Namer</deityTypeMaker>
        <festivalNameMaker MayRequire="Ludeon.RimWorld.Ideology">SSR_Festival_Namer</festivalNameMaker>
        <leaderTitleMaker MayRequire="Ludeon.RimWorld.Ideology">SSR_LeaderTitle_Namer</leaderTitleMaker>
        <allowedPlaceTags>
            <li>OriginSpacer</li>
        </allowedPlaceTags>
        <iconPath>UI/Cultures/SSR_Culture_Communism</iconPath>
        <styleItemTags>
            <li>
                <tag>Urban</tag>
                <baseWeight>0.01</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
            <li>
                <tag>Rural</tag>
                <baseWeight>0.01</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
            <li>
                <tag>NoBeard</tag>
                <baseWeight>10</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
            <li>
                <tag>NoTattoo</tag>
                <baseWeight>1</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
        </styleItemTags>
    </CultureDef>


    <RulePackDef>
        <defName>SSR_Base_Namer</defName>
        <rulePack>
            <rulesFiles>
                <li>SSR_Xing->Names/SSR_Xing</li>
                <li>SSR_Ming->Names/SSR_Ming</li>
                <li>SSR_FactionAdj->Names/SSR_Factionadj</li>
            </rulesFiles>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>SSR_Person_Namer</defName>
        <include>
            <li>SSR_Base_Namer</li>
        </include>
        <rulePack>
            <rulesStrings>
                <li>r_name->[SSR_Xing][SSR_Ming][SSR_Ming]</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>SSR_LeaderTitle_Namer</defName>
        <include>
            <li>SSR_Base_Namer</li>
        </include>
        <rulePack>
            <rulesStrings>
                <li>memeLeaderNoun(priority=1)->[cultureLeaderNoun]</li>
                <li>r_leaderTitle->[cultureLeaderNoun]</li>
                <li>cultureLeaderNoun->领导人</li>
                <li>cultureLeaderNoun->主管</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>SSR_Ideo_Namer</defName>
        <rulePack>
            <rulesStrings>
                <li>r_ideoName->[IdeoAdj]太阳系共和国</li>
                
                <li>r_ideoAdjective->太阳系共和国</li>
                <li>r_memberName->共产主义者</li>

                <li>IdeoAdj->新</li>
                <li>IdeoAdj->融汇</li>
                <li>IdeoAdj->融合</li>
                <li>IdeoAdj->大同</li>
                <li>IdeoAdj->炎黄</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>SSR_Festival_Namer</defName>
        <rulePack>
            <rulesStrings>
                <li>festivalName->共和国[festival][festival]庆典</li>
            </rulesStrings>
            <rulesFiles>
                <li>festival->Names/SSR_festivals</li>
            </rulesFiles>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>SSR_DeityType_Namer</defName>
        <include>
            <li>GlobalUtility</li>
        </include>
        <rulePack>
            <rulesStrings>
                <li>r_deityType->123111221</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <RulePackDef>
        <defName>SSR_Deity_Namer</defName>
        <rulePack>
            <rulesStrings>
                <li>r_deityName->[SSR_ShenMing]</li>
            </rulesStrings>
            <rulesFiles>
                <li>SSR_ShenMing->Names/SSR_ShenMing</li>
            </rulesFiles>
        </rulePack>
    </RulePackDef>

</Defs>